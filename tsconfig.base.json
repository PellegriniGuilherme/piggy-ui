{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["package/*"],
      "@piggy-ui/*": ["package/components/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
